<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="simple" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/onlinemall"
                        userId="root" password="root"/>

        <javaModelGenerator targetPackage="com.onlinemall.item.pojo" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.onlinemall.item.mapper" targetProject="src/main/java"/>

        <!--<table tableName="tb_category" domainObjectName="Category"/>-->
<!--        <table tableName="tb_brand" domainObjectName="Brand"/>-->
        <!--<table tableName="tb_sku" domainObjectName="Sku"/>-->
        <table tableName="tb_order" domainObjectName="SpuDetail"/>
    </context>
</generatorConfiguration>